PUBLIC_BASE_URL=https://your-domain.example
TWITCH_CLIENT_ID=...
TWITCH_CLIENT_SECRET=...
TWITCH_BROADCASTER_LOGIN=cassia_quing
# Optional: override redirect URI if needed
# TWITCH_REDIRECT_URI=https://cass-tracker.niklasky.com/oauth/callback

# Postgres (optional overrides)
POSTGRES_DB=cass_tracker
POSTGRES_USER=cass
POSTGRES_PASSWORD=change-me
# Or set a full connection string instead:
# DATABASE_URL=postgresql://cass:change-me@db:5432/cass_tracker

# Google Sheet
GOOGLE_SHEET_ID=...

# Put the full service account JSON in one line (escaped) or use docker secrets later.
# Example: {"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"..."}
GOOGLE_SERVICE_ACCOUNT_JSON=...

# Optional: protect debug endpoints (recommended in production)
# The collector will require header `X-Admin-Key: <value>` for /oauth/whoami
ADMIN_API_KEY=...

# Optional: encrypt stored OAuth tokens at rest in Postgres.
# Format: base64 encoded 32 bytes (AES-256-GCM).
# Example (Linux/macOS):  openssl rand -base64 32
TOKEN_ENCRYPTION_KEY=...

